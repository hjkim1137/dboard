<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/main.css" rel="stylesheet" />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs')%>

    <div class="detail-bg">
      <div class="chat-screen">
        <% if(chats && chats.length > 0) { %>
          <% for(let i=0; i<chats.length; i++) { %>
            <div class="chat-box"><span><%= username %>: <%=chats[i].chats %></span></div>
            <div class="chat-box-mine"><span><%= username %>: <%=chats[i].chats %></span></div>
            <% } %>
        <% } %>
      </div>
    </div>

    <div class="chat-form">
      <input class="chat-input" />
      <button 
        class="chat-button" >전송</button>
    </div>

    <!-- 소켓 io 세팅 -->
    <script src="https://cdn.jsdelivr.net/npm/socket.io@4.7.2/client-dist/socket.io.min.js"></script>
    <script>
      // 유저의 웹소켓 연결코드
      const socket = io();

      // 1번
      let sendButton = document.querySelector('.chat-button')
      let userInput = document.querySelector('.chat-input')

      // chat.js가 보내준 현재 채팅룸 id, 유저 ID
      let roomID = "<%= roomId %>"
      console.log('roomID', roomID)
      let userID = "<%= userId %>"
      console.log('userId', userID)
      let username = "<%= username %>"
      console.log('username', username)
    
      sendButton.addEventListener('click', function () {
          if (userInput.value) {

            // data
            let msgObject = {
              msg: userInput.value,
              roomId: roomID,
              userId: userID,
              userName : username,
              date:new Date(),
            }

          socket.emit('msg-send', msgObject);
          userInput.value= "";
          console.log("클라에서 서버 데이터 송신 완료") // 브라우저 콘솔에 찍힘
      }})
      
      // 4번
      socket.on('msg-send', function(data) {
        let parsedData = JSON.parse(data)
        console.log('서버가 보낸 데이터 클라가 파싱', parsedData)
        console.log("클라에서 서버 데이터 수신 완료") // 브라우저 콘솔에 찍힘

        let chatScreen= document.querySelector('.chat-screen')
        chatScreen.insertAdjacentHTML('beforeend',`<div class="chat-box"><span>${parsedData.msg}</span></div>`);
      });

    </script>
  </body>
</html>
